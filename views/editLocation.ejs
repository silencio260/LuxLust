<% include ./partials/header %>
<div class="container">
    
    <h1 class="text-center">Edit <%=location.name%> </h1>

    <div class="form-layout">
        <form action="/locations/<%= location._id%>/edit?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" value="<%=location.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" value="<%=location.image %>">
            </div>
            <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%=location.description %>">
                </div>
            <div class="form-group">
                <button class="btn btn-primary">Update</button>
            </div>
            <a href="/locations">Go Back</a>

        </form>
    </div>
    

</div>
<% include ./partials/footer %>